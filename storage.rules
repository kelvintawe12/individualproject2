rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Listings images
    match /images/listings/{allPaths=**} {
      // Only authenticated users may read listing images
      allow read: if request.auth != null;
      // Only authenticated users may upload, limit to 5 MB by default
      allow write: if request.auth != null && request.resource.size < 5 * 1024 * 1024;
    }

    // Chat images
    match /images/chats/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.resource.size < 5 * 1024 * 1024;
    }

    // Deny other paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
